{% extends 'base.html.twig' %}

{% block body %}

{% for devp in developers %}
{% if devp.id % 2 != 0 %}
<div class="row no-margin row_margin">
    <div class="col-lg-2 offset-lg-2">
        <img class="bio_image" src="{{ asset('uploads/media/' ~ devp.image) }}">
    </div>
    <div class="col-lg-6">
        <div class="col-lg-12">
            <p><b>{{ devp.surname }}, {{ devp.name }}</b></p>
            <p>
                {{ devp.personalinformation }}
            </p>
        </div>
        <div class="row row_padding">
            <div class="col-lg-5 offset-lg-7 miclase" align="right">
                <a href="{{ devp.linkedin }}" target="_blank"><img class="bio_icon icon_linkedin" src="{{ asset('bundles/app/image/icon_linkedin.png') }}"></a>
                <a href="{{ devp.twitter }}" target="_blank"><img  class="bio_icon icon_twitter" src="{{ asset('bundles/app/image/icon_twitter.png') }}"></a>
                <a href="{{ devp.github }}" target="_blank"><img class="bio_icon icon_gmail" src="{{ asset('bundles/app/image/icon_github.png') }}"></a>
        
            </div>
        </div>
    </div>
</div>
{% else %}
<div class="row no-margin row_margin">
    <div class="col-lg-6 offset-lg-2">
        <div class="col-lg-12">
            <p><b>{{ devp.surname }}, {{ devp.name }}</b></p>
            <p>
                {{ devp.personalinformation }}
            </p>
        </div>
        <div class="row row_padding">
            <div class="col-lg-5 miclase" align="left">
                <a href="{{ devp.linkedin }}" target="_blank"><img class="bio_icon icon_linkedin" src="{{ asset('bundles/app/image/icon_linkedin.png') }}"></a>
                <a href="{{ devp.twitter }}" target="_blank"><img class="bio_icon icon_twitter" src="{{ asset('bundles/app/image/icon_twitter.png') }}"></a>
                <a href="{{ devp.github }}" target="_blank"><img class="bio_icon icon_gmail" src="{{ asset('bundles/app/image/icon_github.png') }}"></a>
        
            </div>
        </div>
    </div>
    <div class="col-lg-2">
            <img class="bio_image" src="{{ asset('uploads/media/' ~ devp.image) }}">
        </div>
</div>
{% endif %}
{% endfor %}

{% endblock %}

{% block javascripts %}
<script>
    var test_var = "";

    $( document ).ready(function() {
        
        $( ".icon_linkedin" ).mouseenter(function() {
            $( this ).attr("src", "{{ asset('bundles/app/image/icon_linkedin_hover.png') }}")
        }).mouseleave(function() {
            $( this ).attr("src", "{{ asset('bundles/app/image/icon_linkedin.png') }}")
        });

        $( ".icon_twitter" ).mouseenter(function() {
            $( this ).attr("src", "{{ asset('bundles/app/image/icon_twitter_hover.png') }}")
        }).mouseleave(function() {
            $( this ).attr("src", "{{ asset('bundles/app/image/icon_twitter.png') }}")
        });

        $( ".icon_gmail" ).mouseenter(function() {
            $( this ).attr("src", "{{ asset('bundles/app/image/icon_github_hover.png') }}")
        }).mouseleave(function() {
            $( this ).attr("src", "{{ asset('bundles/app/image/icon_github.png') }}")
        });

        test_var = "spotify:track:74PPA7p9T8r8U0d3Hf9qWL";
    });
</script>
{% endblock %} 